    <artifactId>JodaTime</artifactId>
    <packaging>pom</packaging>
    
    <description>
        This project defines a common dependency for JodaTime,  allowing us to 
        specify the version in an single place.
        
        To include this as a dependency in another project, use the following:
        <!--
        <dependencies>
            ...
            <dependency>
                <groupId>com.galvin.deps</groupId>
                <artifactId>JodaTime</artifactId>
                <version>1.0</version>
                <type>pom</type>
            </dependency>
            ...
        </dependencies>
        -->
    </description>
    
    <dependencies>
        <dependency>
            <groupId>joda-time</groupId>
            <artifactId>joda-time</artifactId>
            <version>2.7</version>
        </dependency>
    </dependencies>
</project>
